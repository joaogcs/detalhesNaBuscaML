{
	"manifest_version": 2,

	"name": "ML - Frete na lista de busca",
	"description": "Mostra o frete do produto ao lado na lista de busca.",
	"version": "1.0",
	"background": {
		"scripts": [ 
			"/src/js/libs/jquery-3.5.1.min.js",
			"/src/js/models/background.js"
		],
		"persistent": false
	},
	"options_ui": {
		"page": "/src/html/options.html",
		"open_in_tab": true
	},
	"icons": {
		"16": "/src/images/icons/icon_16.png",
		"48": "/src/images/icons/icon_48.png",
		"128": "/src/images/icons/icon_128.png"
	},
	"permissions": [ "tabs", "*://*/*", "webNavigation", "storage" ],
	"content_scripts": [
		{
			"matches": [ "*://*.mercadolivre.com.br/*" ],
			"css": [ "/styles/styles.css" ],
			"js": [
				"/src/js/libs/jquery-3.5.1.min.js",
				"/src/js/models/restore_options.js",
				"/src/js/models/background.js",
				"/src/js/models/item.js",
				"/src/js/models/scraper.js",
				"/src/js/models/requests.js",
				"/src/js/views/render.js",
				"/src/js/controllers/parser.js",
				"/src/js/controllers/app.js"
			],
			"run_at" : "document_idle"
		}
	],
	"browser_action": {
		"default_icon": "/src/images/icons/icon.png",
		"default_title": "Executar extens√£o"
	}
}
