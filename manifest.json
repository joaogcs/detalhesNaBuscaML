{
	"manifest_version": 2,

	"name": "ML - Frete na lista de busca",
	"description": "Mostra o frete do produto ao lado na lista de busca.",
	"version": "1.0",
	"background": {
		"scripts": [ "jquery-3.5.1.min.js", "background.js" ],
		"persistent": false
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"icons": {
		"16": "/icons/icon_16.png",
		"48": "/icons/icon_48.png",
		"128": "/icons/icon_128.png"
	},
	"permissions": [ "tabs", "*://*/*", "webNavigation", "storage" ],
	"content_scripts": [
		{
			"matches": [ "*://*.mercadolivre.com.br/*" ],
			"css": [ "Styles/Styles.css" ],
			"js": [ "jquery-3.5.1.min.js", "jquery.min.js", "background.js" ],
			"run_at" : "document_idle"
		}
	],
	"browser_action": {
		"default_icon": "/icons/icon.png",
		"default_title": "Executar extens√£o"
	}
}
